<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.projektandroid.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_capturingFragment"
            app:destination="@id/capturingFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_faceRecognitionFragment"
            app:destination="@id/faceRecognitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.projektandroid.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_faceRecognitionFragment"
            app:destination="@id/faceRecognitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/capturingFragment"
        android:name="com.example.projektandroid.CapturingFragment"
        android:label="fragment_capturing"
        tools:layout="@layout/fragment_capturing" />
    <fragment
        android:id="@+id/faceRecognitionFragment"
        android:name="com.example.projektandroid.FaceRecognitionFragment"
        android:label="fragment_face_recognition"
        tools:layout="@layout/fragment_face_recognition" >
        <action
            android:id="@+id/action_faceRecognitionFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>